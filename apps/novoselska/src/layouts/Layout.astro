---
import SEO from './SEO.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#9EA3FA" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300&display=swap"
      rel="stylesheet"
    />

    <SEO />

    <title>{title}</title>

    <!-- preload fonts -->
  </head>
  <body>
    <main class="flex flex-col items-center justify-between pt-20">
      <div class="absolute top-5 w-full justify-between px-5 flex">
        <h1 class="text-lg text-gray-800 font-extrabold">
          д-р М. Новоселска <div class="font-thin text-xs">
            клиничен психиатър
          </div>
        </h1>
        <img src="/logo.png" class="logo w-12 h-full" />
      </div>
      <slot />
    </main>
  </body>
</html>
