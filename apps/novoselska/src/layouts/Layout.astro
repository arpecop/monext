---
import SEO from './SEO.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#9EA3FA" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300&display=swap"
      rel="stylesheet"
    />

    <SEO />

    <title>{title}</title>
  </head>
  <body class="flex h-screen flex-col">
    <header class="top-5 w-full justify-between p-5 flex grow-0">
      <div class="flex">
        <img src="/logo.png" class="logo w-12 h-12 mr-3" />
        <h1 class="text-lg text-gray-800 font-extrabold">
          Д-р М. Новоселска <div class="font-thin text-xs">
            клиничен психиатър
          </div>
        </h1>
      </div>
    </header>

    <slot />
  </body>
</html>
