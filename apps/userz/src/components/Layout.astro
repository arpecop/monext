---
import "../../base.css";
export interface Props {
	title: string;
	description?: string;
	logo?: string;
	topic?: string;
	image?:string;
	tags?: { hashtag: string; count: number }[];
}
const { title, description, logo, tags, topic,image } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta
 name="description"
 content={description ||
 	"Zero in on  social media presence by checking out their  profiles, featuring photos and engaging content"}
		/>
		<link
 rel="stylesheet"
 href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>
		<meta property="og:app_id" content="281985576166744">
		<meta property="og:site_name" content="userz.net">
		<meta property="og:type" content="article">
		<meta property="og:title" content={title}>
		<meta property="og:description"  content={description ||
		"Zero in on  social media presence by checking out their  profiles, featuring photos and engaging content"}>
		<meta property="og:url" content={''}>
		<meta property="og:image:width" content="612">
		<meta property="og:image:height" content="408">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@kloundot">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description ||
		"Zero in on  social media presence by checking out their  profiles, featuring photos and engaging content"}>
		<meta name="twitter:image:src" content={image || 'https://cdn.userz.net/1192206.jpg'}>
		<meta property="og:image" content={image || 'https://cdn.userz.net/1192206.jpg'}>
	</head>
	<body>
		<nav>
 <div
 	class="flex flex-wrap items-center mx-auto max-w-screen-xl p-4"
 >
 	<a href="/" class="flex items-center">
 		<img
  src={logo !== "inner" ? "/logo2.png" : "/logotext.png"}
  class={logo !== "inner" ? "w-2/4   " : "w-1/2"}
  alt="userz logo"
 		/>
 	</a>
 	<div class="flex items-center absolute right-4">
 		<a
  href="/auth"
  class="text-md text-emerald-600 hover:underline font-black"
  ><span class="material-symbols-outlined absolute -ml-6 -mt-0.5">badge</span>Sign In</a
 		>
 	</div>
 </div>
		</nav>
		{
 topic && (
 	<h1 class="mb-2 text-4xl  tracking-tight text-gray-200 dark:text-white text-center">
 		{topic}
 	</h1>
 )
		}
		<nav>
 <div class="max-w-screen-xl px-4 py-3 mx-auto">
 	<div class="flex items-center">
 		<ul class="flex space-x-1 text-md overflow-x-auto">
  {
  	tags && tags.filter((t: {
   		hashtag: string;
   		count: number;
   	}) => t.hashtag.length > 2
   )
   .map(
   	({
   		hashtag,
   		count,
   	}: {
   		hashtag: string;
   		count?: number;
   	}) => (
   		<li>
    <a
    	href={count === 1 ? "#" : "/t/" + hashtag }
    	class="text-black block px-3 mx-1 mb-3 bg-emerald-600 rounded-2xl lowercase font-black flex text-md"
    >
    	<>
    		<span class="material-symbols-outlined  -ml-2 ">
     tag
    		</span>
    		<span>{hashtag} </span>
    	</>
    </a>
   		</li>
   	)
   )
  }
 		</ul>
 	</div>
 </div>
		</nav>
		<main class="max-w-screen-xl mx-auto pb-gap-16">
 <slot />
		</main>
		
		<footer class="  bottom-0 left-0 z-20 w-full p-4   border-t border-gray-800 shadow md:flex md:items-center md:justify-between md:p-6 dark:border-gray-600">
 <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2023 <a href="https://userz.net/" class="hover:underline">userznet™</a>. All Rights Reserved.
 </span>
 <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0">
 	<li>
 		<a href="#" class="mr-4 hover:underline md:mr-6">About</a>
 	</li>
 	<li>
 		<a href="#" class="mr-4 hover:underline md:mr-6">Privacy Policy</a>
 	</li>
 	<li>
 		<a href="https://kloun.lol" class="mr-4 hover:underline md:mr-6">kloun.lol</a>
 	</li>
 	<li>
 		<a href="#" class="hover:underline">Contact</a>
 	</li>
 </ul>
		</footer>

	</body>
</html>
