---
import '../../base.css'
export interface Props {
	title: string;
	description?:string
	logo?:string
	topic?:string
	tags?: {hashtag:string,count:number}[]
}
const { title,description,logo,tags,topic} = Astro.props;
 
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description || 'Zero in on  social media presence by checking out their  profiles, featuring photos and engaging content'} /> 
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
	</head>
	<body>
		<nav>
			<div class="flex flex-wrap   items-center mx-auto max-w-screen-xl p-4">
				<a href="/" class="flex items-center">
					<img src={logo !== 'inner' ? "/logo2.png":"/logotext.png"} class={logo !== 'inner' ? "w-2/4   ":"w-1/2"} />
					 
				</a>
				<div class="flex items-center absolute right-4">
					<a href="/auth" class="text-md  text-blue-600  hover:underline font-black">Login</a>
				</div>
			</div>
		</nav>
		{topic && 	<h1 class="mb-2 text-4xl  tracking-tight text-gray-200 dark:text-white text-center">{topic}</h1>}
		<nav>
			<div class="max-w-screen-xl px-4 py-3 mx-auto">
				<div class="flex items-center">
					<ul class="flex flex-wrap space-x-1 text-sm">
						{
						tags && tags.filter((t:{hashtag:string,count:number})=> t.hashtag.length > 2) .map(({hashtag,count}:{hashtag:string,count?:number}) => (
							 <li>
								 <a href={  (count === 1) ? '#' : "/t/"+ hashtag} class="text-black block px-3 m-1 bg-emerald-600 rounded-2xl lowercase font-black flex"><span class="material-symbols-outlined text-sm -ml-2 ">
									 tag </span><span>{hashtag}   </span></a>
							 </li>	 
							))
							 }
						 
					</ul>
				</div>
			</div>
		</nav>
	 <main class="max-w-screen-xl   mx-auto">
		<slot />
 </main>
	</body>
</html>
 

 